@model IEnumerable<OdontoVision.Application.ViewModels.DiagnosticoViewModel>
@{
    ViewData["Title"] = "Diagnósticos";
}
<h1>Diagnósticos</h1>
<a asp-action="Create" class="btn btn-primary">Novo Diagnóstico</a>
<table class="table">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descricao</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
